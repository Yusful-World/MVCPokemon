@model List<Photo>

@{
    ViewData["Title"] = "Photos";
}

<div class="row-cols-5 text-end">
    <a asp-controller="Photo" asp-action="AddPhoto" class="btn btn-primary mb-2">
        <i class="bi bi-file-plus"></i> New Photo
    </a>
</div>
<div class="row pb-2">
    @foreach (Photo photo in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-1 ">
                <div class="col-12 pt-2 card align-content-center">
                    <div class="card border-1 pb-0 align-content-center">
                        <img src="@photo.ImageUrl" class="card-img-top img-fluid" style="width:100%; object-fit:cover; height:200px;" />
                    </div>
                    <div class="card-body pb-0">
                        <div class="pt-0" >
                            <p class="card-title h5 text-dark opacity-75 text-center">@photo.Title</p>
                            <p>
                                <a asp-action="Photo"
                                   asp-route-id="@photo.Id"
                                   class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

